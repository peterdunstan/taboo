  </div>

  <div>
    <button onclick="nextCard()">Next</button>
    <button onclick="shuffleCards()">Shuffle</button>
  </div>

  <script>
    const cards = [
      {main: "Social Media", taboo: ["TikTok", "Instagram", "YouTube", "phone"]},
      {main: "App", taboo: ["download", "program", "game", "use"]},
      {main: "YouTube", taboo: ["video", "watch", "subscribe", "channel"]},
      {main: "TikTok", taboo: ["short", "dance", "song", "clip"]},
      {main: "Snapchat", taboo: ["photo", "message", "disappear", "chat"]},
      {main: "Instagram", taboo: ["picture", "story", "post", "follow"]},
      {main: "Facebook", taboo: ["old", "post", "like", "friend"]},
      {main: "Threads", taboo: ["Instagram", "new", "app", "text"]},
      {main: "Roblox", taboo: ["game", "play", "online", "avatar"]},
      {main: "Minecraft", taboo: ["build", "blocks", "game", "play"]},
      {main: "YouTuber", taboo: ["video", "channel", "creator", "famous"]},
      {main: "Influencer", taboo: ["followers", "post", "online", "money"]},
      {main: "Phone", taboo: ["mobile", "call", "text", "screen"]},
      {main: "Flip Phone", taboo: ["open", "close", "old", "buttons"]},
      {main: "Tablet", taboo: ["screen", "iPad", "big", "touch"]},
      {main: "Laptop", taboo: ["computer", "keyboard", "screen", "work"]},
      {main: "Post", taboo: ["share", "upload", "picture", "video"]},
      {main: "Comment", taboo: ["write", "reply", "under", "post"]},
      {main: "Like", taboo: ["heart", "thumbs-up", "click", "love"]},
      {main: "Follow", taboo: ["see", "account", "people", "page"]},
      {main: "Ban", taboo: ["stop", "rule", "not", "allow"]},
      {main: "Law", taboo: ["rule", "government", "police", "make"]},
      {main: "eSafety", taboo: ["protect", "online", "safe", "internet"]},
      {main: "Cyberbullying", taboo: ["mean", "online", "hurt", "bully"]},
      {main: "Privacy", taboo: ["secret", "personal", "safe", "share"]},
      {main: "Prime Minister", taboo: ["leader", "government", "Anthony", "Canberra"]},
      {main: "Friend", taboo: ["talk", "play", "best", "person"]},
      {main: "Addicted", taboo: ["canâ€™t stop", "always", "habit", "phone"]},
      {main: "Free Time", taboo: ["play", "relax", "after school", "no homework"]},
      {main: "Balance", taboo: ["work", "play", "equal", "life"]},
      {main: "Choice", taboo: ["pick", "decide", "want", "choose"]},
    ];

    let index = 0;

    function showCard() {
      const card = cards[index];
      document.getElementById("main-word").textContent = card.main;
      const list = document.getElementById("taboo-list");
      list.innerHTML = "";
      card.taboo.forEach(word => {
        const li = document.createElement("li");
        li.textContent = word;
        list.appendChild(li);
      });
    }

    function nextCard() {
      index = (index + 1) % cards.length;
      showCard();
    }

    function shuffleCards() {
      cards.sort(() => Math.random() - 0.5);
      index = 0;
      showCard();
    }

    // Initialize first card
    shuffleCards();
  </script>

